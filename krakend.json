{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "extra_config": {
    "grpc": {
      "catalog": [
        "/etc/krakend/pb/"
      ]
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "endpoint": "/profile/ping",
      "backend": [
        {
          "url_pattern": "/profile.Ping/PingParams",
          "extra_config": {
            "backend/grpc": {
              "use_request_body": true
            }
          },
          "host": [
            "service_profile:8081"
          ]
        }
      ]
    },
    {
      "endpoint": "/catalog/ping",
      "backend": [
        {
          "url_pattern": "/catalog.Ping/PingParams",
          "extra_config": {
            "backend/grpc": {
              "use_request_body": true
            }
          },
          "host": [
            "service_catalog:8081"
          ]
        }
      ]
    }
  ],
  "output_encoding": "json"
}